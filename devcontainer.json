{
  "name": "My Codespace with Mounted Root",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.8",
  "runArgs": [
    "--privileged"
  ],
  "volumes": [
    "/:/mnt"
  ],
  "postCreateCommand": "echo 'Root directory mounted to /mnt!'",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ]
    }
  }
}
